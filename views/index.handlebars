<h1>ZIZZ's Burgers of the Day</h1>
<div class="ink-grid">
  <div class="column-group">
  <div class="all-50">
<h2>Burgers Not Tried:</h2>
<ul class="unstyled">
  {{#each burgers}}
      <li>
        {{this.id}}
        {{this.burger_name}}
      </li>
  {{/each}}

</ul>
</div>
{{!-- Burgers that have been eaten --}}
<div class="all-50">
<h2>Burgers I Tried:</h2>
<ul class="unstyled">
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>

<div class="ink-grid align-center">
  <div class="column-group">
{{!-- Add a burger Box --}}
<div class="all-25">
<form action="/" method="POST">
  <div class="form-group">
    <label for="ca">Burger Name:</label><br>
    <input type="text" id="burg" name="burger_name">
  </div>
  <button class="ink-button green" type="submit">ADD A BURGER!</button>
</form>
</div>
{{!-- Eat the burger - change devoured to true --}}
<div class="all-25">
<form action="/{{this.id}}?_method=UPDATE" method="POST">
  <div class="form-group">
    <label for="ca">Burger ID You Want to Eat:</label>
    <input type="text" id="burg" name="burger_id">
  </div>
  <button class="ink-button green" type="submit">EAT THE BURGER!</button>
</form>
</div>
{{!-- Delete the burger --}}
<div class="all-25">
<form action="/{{this.id}}?_method=DELETE" method="POST">
  <div class="form-group">
    <label for="ca">ID of Burger to Delete:</label><br>
    <input type="text" id="burg" name="burger_id">
  </div>
  <button class="ink-button green" type="submit">DELETE A BURGER!</button>
</form>
</div>
</div>
</div>